{
    "name": "shift/cli",
    "description": "A CLI tool for running automated tasks",
    "keywords": ["laravel", "php", "code", "refactor", "automation", "cli"],
    "type": "php",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "laravel-zero/framework": "^9.2",
        "laravel/pint": "^1.2",
        "nikic/php-parser": "^4.15",
        "nunomaduro/termwind": "^1.14",
        "symfony/finder": "^6.1"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.4",
        "pestphp/pest": "^1.21.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["shift"]
}
